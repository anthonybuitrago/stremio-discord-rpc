{
    "manifest_version": 3,
    "name": "MediaRPC Helper",
    "version": "1.0",
    "description": "Sends media information from YouTube Music and HiAnime to MediaRPC.",
    "permissions": [
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://music.youtube.com/*",
        "https://hianime.to/*",
        "https://www.hianime.to/*",
        "*://*.hianime.to/*",
        "*://megaplay.buzz/*",
        "*://megacloud.tv/*",
        "http://127.0.0.1:9696/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://music.youtube.com/*"
            ],
            "js": [
                "content_ytm.js"
            ]
        },
        {
            "matches": [
                "https://hianime.to/*",
                "https://www.hianime.to/*",
                "*://*.hianime.to/*",
                "*://megaplay.buzz/*",
                "*://megacloud.tv/*"
            ],
            "js": [
                "content_hianime.js"
            ],
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "icon128.png"
    }
}